{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["../lib/*"],
      "@/types/*": ["../types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
